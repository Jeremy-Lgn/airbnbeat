<h1 class="font_title pt-5">Louez les meilleurs instruments près de chez vous</h1>

<div class="container">
  <div class="row justify-content-left">
    <div class="col-sm-8 my-3">
      <%= form_with url: root_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Tapez un instrument..." %>
        <%= submit_tag "Rechercher", name: "", class: "btn btn-warning ml-2" %>
      <% end %>
    </div>
  </div>
</div>

<div class="instruments-map-layout">
  <div id="instruments" class="instrument-section">
    <% if @instruments.any? %>
      <%= render "instrument", instruments: @instruments %>
    <% else %>
      <p>Désolé, nous n'avons pas trouvé ton instrument</p>
    <% end %>
  </div>

  <div class="map-container">

    <div style="width: 100%; height: 100%"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="map-controls">
      <button id="zoom-in"><i class="fas fa-search-plus"></i></button>
      <button id="zoom-out"><i class="fas fa-search-minus"></i></button>
      <button id="locate-me"><i class="fas fa-crosshairs"></i></button>
    </div>
  </div>
</div>
