
<div class="instrument-form">


  <%= simple_form_for(@instrument) do |f| %>
    <div class="form-inputs">
      <%= f.input :title %>
      <%= f.input :brand %>
      <%= f.input :model %>
      <%= f.input :price_per_day %>
      <%= f.input :description, as: :text %>
      <%= f.association :category %>
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, "CrÃ©er l'instrument", button_html: { class: 'btn btn-primary' } %>
      <%= link_to "Retour", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
